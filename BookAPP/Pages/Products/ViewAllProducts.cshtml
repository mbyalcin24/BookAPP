@page "/products/all"
@model BookAPP.Pages.Products.ViewAllProducts
@{
}

<h1>All Products</h1>
@*<button><a asp-page="AddProduct" class="btn btn-outline-success">Neues Buch hinzufügen</a></button>*@ @*geht zwar, hat aber komischen Rahmen, da es ein Button ist*@
<td><a asp-page="AddProduct" class="btn btn-outline-success float-xxl-end">Neues Buch hinzufügen</a></td>


<hr />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Products)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td><a asp-page="UpdateProduct" asp-route-id="@item.ID">Edit</a></td>
            </tr>
        }
    </tbody>
</table>